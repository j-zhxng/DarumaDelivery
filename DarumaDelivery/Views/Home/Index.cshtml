@{
    ViewData["Title"] = "DarumaDelivery";
}
<title>DarumaDelivery</title>
<style>
    h1.left {
        line-height: 100px;
        height: 200px;
        border: 3px solid purple;
        text-align: start
    }

    h1.double {
        border-style: double;
        border-width: thick
    }

    h1 {
        background-color: firebrick;
        color: ghostwhite;
        font-family:Algerian;
    }

    h1 {
        text-align: start
    }

    body {
        background-color: black
    }
</style>

<div class="container container-fluid">
    <h1 class="double">DarumaDelivery</h1>
    <div id="demo" class="carousel slide" data-bs-ride="carousel">


        <div class="carousel-indicators">
            <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
      
        </div>

        <div class="carousel-inner">

            <div class="carousel-item active">
                <img src="~/lib/img/Daruma-Ramen_2000x740-2000x740.jpg" alt="r0" class="rounded-3" style="width:1250px; height:370px;" ;position:center">
            </div>
            <div class="carousel-item">
                <img src="~/lib/img/img_banner_kodawari.jpg" alt="r1" class="rounded-3" style="width:1250px; height:370px;position:center">
            </div>
            <div class="carousel-item">
                <img src="~/lib/img/logo_group_04.jpg" alt="r2" class="rounded-3" style="width:1250px; height:370px;position:center">
            </div>
           


        <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

</div>

<div class="row">
    <div class="col-6">
        <p>Our Delivery Process:</p>
        <p>Step 1: Order</p>
        <p>We recieve your orders as soon as you purchase and the funds have been confirmed.</p>
        <p>Step 2: Packaging</p>
        <p>We use biodegrable plastics and recyclable boxes to lessen the pollution pressure.</p>
        <p>All our meat are kept frozen in a small cooler whilst our ingredients are sent fresh on the day</p>
        <p>Step 3: Delivery</p>
        <p>Finally we ship it off to our trusty couriers and get it to you within 4 hours</p>
    </div>
    <div class="col-6">
        <h3>New Item In Stores NOW!</h3>
        <img src="~/lib/img/poster 1.jpg" style="width:448;height:448;" />
    </div>
</div>



